cy7.sh {
	log {
		level INFO
		output file {$LOG_FILE} {
			roll_size 10MB
			roll_keep 10
		}
	}
	tls /data/cert_cy7.pem /data/key_cy7.pem
	encode zstd gzip

	root /blogroot
	file_server

	# rss feed
	redir /rss /index.xml
	redir /feed /index.xml

	# mastodon
	redir /.well-known/host-meta* https://soc.cy7.sh{uri} permanent
	redir /.well-known/webfinger* https://soc.cy7.sh{uri} permanent
	redir /.well-known/nodeinfo* https://soc.cy7.sh{uri} permanent
}

www.cy7.sh {
	redir https://cy7.sh{uri} permanent
}
