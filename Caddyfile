{
	ocsp_stapling off

	servers {
		trusted_proxies static private_ranges
	}
}

pass.cy7.sh {
	log {
		level INFO
		output file {$LOG_FILE} {
			roll_size 10MB
			roll_keep 10
		}
	}
	tls /data/cert_cy7.pem /data/key_cy7.pem

	encode zstd gzip

	# Proxy everything Rocket
	reverse_proxy vaultwarden:80 {
		header_up X-Real-IP {client_ip}
	}
}

